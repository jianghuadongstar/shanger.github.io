/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
  font-family: "Microsoft Yahei";
} 

/*导航*/

.nav{
	position: absolute;bottom: 0;left: 0;z-index: 100;
	width: 100%;
	height: 80rpx;line-height: 80rpx;
}
.nav > .a{
	display: inline-block;
	width: 25%;height: 80rpx;vertical-align: top;
	text-align: center;line-height: 80rpx;
	font-size: 0.68rem;
}
.nav .a:nth-of-type(1){
	color: #12b7f5;
}
.nav .a:nth-of-type(2){
	color: #d2888d;
}
.nav .a:nth-of-type(3){
	color: #ed710c;
}
.nav .a:nth-of-type(4){
	color: #84b12a;
}

/*li*/

.infoLi{
    display: block;
    text-align: left;
    font-size: 32rpx;
}